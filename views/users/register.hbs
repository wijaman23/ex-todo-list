<div class="row justify-content-center">
    <div class="col-12 col-md-3">
        <h2 class="mb-2">Register</h2>
        <form action="/users" method="POST">
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fa fa-user-circle fa-fw"></i></span>
                <input type="text" name="name" value="{{ user.name }}" class="form-control {{#if errors.name }}is-invalid{{/if}}" placeholder="Enter your name" />
                    {{#if errors.name }}<div class="invalid-feedback">{{ errors.name }}</div>{{/if}}
            </div>
            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fa fa-key fa-fw"></i></span>
                <input type="password" name="password" class="form-control {{#if errors.password }}is-invalid{{/if}}" placeholder="Enter your password" />
                    {{#if errors.password }}<div class="invalid-feedback">{{ errors.password }}</div>{{/if}}
            </div>

            <div class="input-group mb-3">
                <span class="input-group-text"><i class="fa fa-envelope-o fa-fw"></i></span>
                <input type="email" name="email" value="{{ user.email }}" class="form-control {{#if errors.email }}is-invalid{{/if}}" placeholder="Enter your name" />
                    {{#if errors.email }}<div class="invalid-feedback">{{ errors.email }}</div>{{/if}}
            </div>

                <div class="input-group mb-3">
                <span class="input-group-text"><i class="fa fa-picture-o fa-fw"></i></span>
                <input type="text" name="img" value="{{ user.img }}" class="form-control {{#if errors.img }}is-invalid{{/if}}" placeholder="Enter your photo" />
                    {{#if errors.img }}<div class="invalid-feedback">{{ errors.img }}</div>{{/if}}
            </div>
            <div class="list-btn">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-secondary" role="button" href="/users">Return</a>
            </div>
        </form>
    </div>
</div>

